<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<!--Mybatis 설정 -->
	<settings>
		<!-- 전통적인 데이터베이스 컬럼명 형태인 A_COLUMN을 CamelCase형태의 자바 프로퍼티명 형태인 aColumn으로 자동으로 매핑하도록 함 -->
		<setting name="mapUnderscoreToCamelCase" value="true"></setting>
		<!--  파라미터에 Null 값이 있을 경우 에러 처리 -->
		<setting name="jdbcTypeForNull" value="VARCHAR"></setting>
	</settings>
	
    <typeAliases>
		<typeAlias alias="admin" type="egovframework.model.Admin"/>
		<typeAlias alias="comment" type="egovframework.model.Comment"/>
		<typeAlias alias="details" type="egovframework.model.Details"/>
		<typeAlias alias="event" type="egovframework.model.Event"/>
		<typeAlias alias="grade" type="egovframework.model.Grade"/>
		<typeAlias alias="inquiry" type="egovframework.model.Inquiry"/>
		<typeAlias alias="member" type="egovframework.model.Member"/>
		<typeAlias alias="mtag" type="egovframework.model.Mtag"/>
		<typeAlias alias="order" type="egovframework.model.Order"/>
		<typeAlias alias="stag" type="egovframework.model.Stag"/>
		<typeAlias alias="store" type="egovframework.model.Store"/>
    </typeAliases>
</configuration>